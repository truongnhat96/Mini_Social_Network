@{
    ViewData["Title"] = "Dashboard";
}

<div style="font-family: Arial, sans-serif;">
    <!-- Sidebar cố định -->
    <div style="background-color: #f5f5f5; width: 220px; padding: 20px; display: flex; flex-direction: column; gap: 15px; align-items: flex-start; position: fixed; top: 60px; left: 0; height: calc(100% - 60px); box-shadow: 2px 0 5px rgba(0,0,0,0.1);">
        <!-- Tiêu đề Sidebar -->
        <h2 style="color: #333; margin-bottom: 20px;">Dashboard</h2>

        <div class="bg-transparent"><h3>Hello @Context.Session.GetString("DisplayName")</h3></div>

        <!-- Nút Friends -->
        <button style="background-color: #2196F3; color: white; padding: 12px 20px; border: none; border-radius: 5px; font-size: 16px; cursor: pointer; width: 100%; text-align: left;">
            Friends
        </button>

        <!-- Nút Settings -->
        <button style="background-color: #424242; color: white; padding: 12px 20px; border: none; border-radius: 5px; font-size: 16px; cursor: pointer; width: 100%; text-align: left;">
            Settings
        </button>
    </div>

    <!-- Nội dung chính -->
    <div style="margin-left: 240px; padding: 20px; margin-top: 80px;">
        <!-- Main Content -->
        <div style="margin-top: 60px;">
            <h1 style="color: #333;">Main Content</h1>
            <p>Here is where the main content of the page will go.</p>
        </div>
    </div>
</div>
